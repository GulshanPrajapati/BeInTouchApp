<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collegename"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12sp"
            android:textColor="@color/btnblue"
            android:fontFamily="sans-serif-black"
            />
        <Button
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:text="Year 2016"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_sttyle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_marginTop="20sp"
            android:src="@drawable/img_2016"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CollegeText"
            android:textAlignment="center"
            android:layout_marginTop="15sp"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="8sp"
            android:text="Join Telegram"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_sttyle"
            android:textColor="@color/white"
            android:layout_marginBottom="60sp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
</ScrollView>